@page "/orientations/create"
@using Microsoft.EntityFrameworkCore
@using TraineeRecord.Models
@inject IDbContextFactory<TraineeRecord.Data.TraineeRecordContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Orientation</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Orientation" OnValidSubmit="AddOrientation" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="Orientation.Name" class="form-control" /> 
                <ValidationMessage For="() => Orientation.Name" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/orientationsAndProjects">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Orientation Orientation { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddOrientation()
    {
        using var context = DbFactory.CreateDbContext();
        context.Orientation.Add(Orientation);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/orientationsAndProjects");
    }
}
