@page "/interns/delete"
@using Microsoft.EntityFrameworkCore
@using TraineeRecord.Models
@inject IDbContextFactory<TraineeRecord.Data.TraineeRecordContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Intern</h2>
    <hr />
    @if (intern is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FirstName</dt>
            <dd class="col-sm-10">@intern.FirstName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastName</dt>
            <dd class="col-sm-10">@intern.LastName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@intern.Gender</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@intern.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PhoneNumber</dt>
            <dd class="col-sm-10">@intern.PhoneNumber</dd>
        </dl>
        <EditForm method="post" Model="intern" OnValidSubmit="DeleteIntern" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(intern is null)">Delete</button> |
            <a href="/interns">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Intern? intern;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        intern = await context.Intern.FirstOrDefaultAsync(m => m.Id == Id);

        if (intern is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteIntern()
    {
        using var context = DbFactory.CreateDbContext();
        context.Intern.Remove(intern!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/interns");
    }
}
